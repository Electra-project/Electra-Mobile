{
  "name": "electramobile",
  "version": "0.0.0",
  "description": "Android & iOS mobile applications for Electra.",
  "license": "MIT",
  "private": true,
  "scripts": {
    "android": "npm run build && concurrently -r 'npm run watch' 'react-native run-android'",
    "ios": "npm run build && concurrently -r 'npm run watch' 'react-native run-ios'",
    "start": "react-native start",
    "tsc": "tsc",
    "build": "npm run lint; npm run tsc --",
    "lint": "tslint -p tsconfig.json",
    "watch": "npm run build -- -w",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "link": "react-native link"
  },
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "/node_modules/(?!react-native|react-navigation|native-base-shoutem-theme|@shoutem/animation|@shoutem/ui|tcomb-form-native)"
    ],
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.(css|scss|less)$": "jest-css-modules"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.js",
    "testRegex": "(/__tests__/.*|(\\.|/)test)\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  },
  "dependencies": {
    "@types/enzyme": "^3.1.10",
    "electra-js": "^0.1.1",
    "ios": "0.0.1",
    "native-base": "^2.4.5",
    "numeral": "^2.0.6",
    "react": "^16.2.0",
    "react-native": "0.53.2",
    "react-native-config": "^0.11.5",
    "react-native-device-info": "^0.21.5",
    "react-native-easy-grid": "^0.1.17",
    "react-native-linear-gradient": "^2.4.0",
    "react-native-svg": "^6.3.1",
    "react-native-svg-animations": "^0.1.6",
    "react-native-vector-icons": "^4.5.0",
    "react-navigation": "^1.5.12"
  },
  "devDependencies": {
    "@types/bitcoinjs-lib": "^3.3.1",
    "@types/jest": "^22.1.3",
    "@types/numeral": "0.0.22",
    "@types/react": "^16.0.38",
    "@types/react-native": "^0.52.13",
    "@types/react-navigation": "^1.0.32",
    "auth0-js": "^9.1.0",
    "babel-jest": "^22.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-native": "^4.0.0",
    "concurrently": "^3.5.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "23.0.0-charlie.1",
    "jest-css-modules": "^1.1.0",
    "jsdom": "^11.6.2",
    "react-native-dotenv": "^0.1.1",
    "react-native-mock-render": "0.0.19",
    "react-native-navigation-mock-render": "^0.1.1",
    "react-renderer": "^0.1.4",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-react": "^3.5.1",
    "typescript": "^2.7.2"
  },
  "author": {
    "name": "Electra",
    "email": "dev@electraproject.org",
    "url": "https://electraproject.org"
  },
  "contributors": [
    {
      "name": "Ivan Gabriele",
      "email": "ivan.gabriele@gmail.com",
      "url": "https://www.ivangabriele.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Electra-project/Electra-Mobile.git"
  },
  "bugs": {
    "url": "https://github.com/Electra-project/Electra-Mobile/issues"
  },
  "homepage": "https://github.com/Electra-project/Electra-Mobile#readme",
  "keywords": [
    "Android",
    "blockchain",
    "eca",
    "electra",
    "iOS"
  ]
}
